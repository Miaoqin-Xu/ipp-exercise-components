#####
# Configuration file for the Intro to Python Programming course
#
# This provides a section-based configuration format for use by
# ConfigUtil with keys defined in ConfigConst.
#
# IMPORTANT: Edit this file to meet your local system requirements.
#

#
# MQTT client configuration information
#
[Mqtt.GatewayService]
credFile       = ./cred/IppMqttLocalCred.props
certFile       = ./cert/IppMqttLocalCertFile.pem
host           = localhost
port           = 1883
securePort     = 8883
defaultQoS     = 0
keepAlive      = 60
enableAuth     = False
enableCrypt    = False

#
# Test app specific configuration information
#
[IppTestApp]
deviceName = ippTestApp001
enableMqttClient = True
enableSystemPerformance = True
enableSensing    = False
enableLogging    = True
pollCycleSecs    = 5
testDataPath     = /tmp/ipp-data
runForever       = False

#
# Environmental system settings
#
[Settings.Environmental]
# configurable limits for sensor simulation
enableEmulator     = False
humiditySimFloor   =   35.0
humiditySimCeiling =   45.0
pressureSimFloor   =  990.0
pressureSimCeiling = 1010.0
tempSimFloor       =   15.0
tempSimCeiling     =   25.0

# configurable limits for actuator triggers
handleTempChangeOnDevice = True
triggerHvacTempFloor     = 18.0
triggerHvacTempCeiling   = 20.0

#
# Camera settings
#
[Settings.Camera]
streamHostAddr      = 127.0.0.1
streamHostLabel     = localhost
streamPort          = 8554
streamProtocol      = rtsp
streamPath          = stream
streamEncoding      = MJPG
streamFrameWidth    = 1440
streamFrameHeight   = 1080
streamFps           =   30
imageFileExt        = .png
videoFileExt        = .avi
minMotionPixelsDiff = 10000

[WeatherPredictorApp]
appName           = SimpleWeatherPredictor
enablePrediction  = True
useWebInterface   = False
runDurationSecs   = 60
deviceName        = weatherPredictor001
enableLogging     = True

[Settings.Weather]
serviceName       = NOAA Weather Service
baseUrl           = https://api.weather.gov
userAgent         = SimpleWeatherApp/1.0
contentType       = application/json
pollCycleSecs     = 15
requestTimeoutSecs = 30
# Weather station IDs for polling (comma-separated)
pollStationIDs    = KBOS,KJFK,KLAX
